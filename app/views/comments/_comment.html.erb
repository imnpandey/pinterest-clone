<div class="comments">
  <div class="comment comment_area">
    <div class="comment_user">
     <%= link_to gravatar(comment.user), user_path(current_user.id) %>
    </div>
    <div class="commentbody">
      <b><%= link_to comment.user.username, user_path(current_user.id) %></b>
        &nbsp; <%= time_ago_in_words(comment.created_at) %> ago<br>
        <%= comment.content %>
    </div>
  </div>
</div>
