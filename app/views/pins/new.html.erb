<div class="popup" style="visibility: visible">
  <div class="header">
      <a class="close" href="#close">x</a>
      <h2>Upload a Pin</h2>
  </div>
  <%= form_for @pin, :url => pins_path, id: "upload_form", :html => { :multipart => true } do |form| %>
    <ul class="ctrl_grp">
      <li>
        <%= form.file_field :image, id: "image_file", onchange: "fileSelecter()" %>
      </li><br>
          <div class="error" style="display: none;"></div>
      <div id ="disp" style="display:none;" >
      <li>
        <div class="prev_img"><%= image_tag("loading.gif", id: "preview") %></div>
        <div class="description">
          <%= form.text_area :description, id: "desp", rows: "3", cols: "20" %>
          <label id="lab">Description of post..</label>
          <span class="fff"></span>
        </div>
      </li>
      <button class="submit_button RedButton" id="sub_post" type="submit">Submit Post</button>
      </div>
    </ul>
  <% end %>
  <div id="upload_result"></div>
</div>
