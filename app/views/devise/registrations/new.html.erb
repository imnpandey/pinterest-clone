<div id="SignUp" class="logo_exp">

  <div class="education logomin">
      <p>Welcome to</p>
      <%= link_to(image_tag("signup_logo.png", width: "383", height: "103"), root_path) %>
  </div>

  <div class="wrapper">
    <div class="shadow"></div>
    <div class="content">
      <div class="header">
        <div class="getStarted"></div>
        <h1>Create your account to explore Lovemate.</h1>
      </div>
        <div id="social_signup">
          <div class="intermission">
            <h2 class="text">Connect with</h2>
          </div>
            <ul class="buttons">
              <li>
                <%= link_to user_facebook_omniauth_authorize_path, class: "BigButton facebook" do %>
                  <span class="logomin"></span>
                  Facebook
                <% end %>
              </li>
              <li>
                <%= link_to user_twitter_omniauth_authorize_path, class: "BigButton twitter" do %>
                  <span class="logomin"></span>
                  Twitter
                <% end %>
              </li>
            </ul>
            <h3>
              <span>or, sign up with</span>
              <a id="signUp" class="colorless" href="javascript:;">your email address.</a>
            </h3>
        </div>
        <div id="signup_form" style="display:none;">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                                :html => {:class => 'Form FancyForm AuthForm'}) do |f| %>
            <%= devise_error_messages! %>
            <ul class="ControlGroups">
              <li>
                <% if alert %>
                  <%= alert %>
                <% end %>
              </li>
              <li>
                <%= f.text_field :name, autofocus: true %>
                <%= f.label :name %>
                <span class="fff"></span>
              </li>
              <li>
                <%= f.email_field :email %>
                <%= f.label :email %>
                <span class="fff"></span>
              </li>
              <li>
                <%= f.password_field :password, autocomplete: "off" %>
                <%= f.label :password %>
                <span class="fff"></span>
              </li>
              <li>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
                <%= f.label :password_confirmation %><br />
                <span class="fff"></span>
              </li>
            </ul>
            <div class="non_inputs">
              <h3 style="padding: 0px !important">
                <span>
                  <%= f.submit "Sign up", class: "Button WhiteButton Button18" %>
                </span>
                <a id="socailSignup" class="colorless" href="javascript:;">social signup.</a>
              </h3>
            </div>
          <% end %>
        </div>


      <div class="footer">
        <h3 class="login">
          <span>Already have an account? </span>
          <%= link_to "Log in.", new_user_session_path %>
        </h3>
      </div>

    </div>
  </div>
</div>
